<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#B5000000"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".90" />

        <Button
            android:id="@+id/btnXprofil"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_weight=".10"
            android:background="@android:color/transparent"
            android:text="X"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".18"
            android:background="#B5000000"
            app:srcCompat="@drawable/inscription_logo" />

        <TextView
            android:id="@+id/txtNomProfil"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".10"
            android:gravity="center"
            android:text="Fvd98 (Francis Vermette-David)"
            android:background="#B5000000"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#c7ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".10"
            android:gravity="center"
            android:background="#B5000000"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:text="Total"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="GagnÃ©es"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:text="Perdues"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c7ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".15"
            android:gravity="center"
            android:background="#B5000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTotalProfil"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="45dp"
                android:background="#c7ffffff"
                android:gravity="center"
                android:text="00"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtGagnerProfil"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#c7ffffff"
                android:gravity="center"
                android:text="00"
                android:textSize="24sp" />

            <TextView

                android:id="@+id/txtPerduProfil"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:background="#c7ffffff"
                android:gravity="center"
                android:text="00"
                android:textSize="24sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c7ffffff" />

        <ListView
            android:id="@+id/listHistoriqueProfil"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#B5000000"
            android:layout_weight=".37" />
</LinearLayout>