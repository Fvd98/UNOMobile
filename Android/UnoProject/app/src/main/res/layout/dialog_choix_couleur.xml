<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="250dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Choisissez une couleur!"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/btnBleu"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/coin_bleu" />

        <ImageButton
            android:id="@+id/btnJaune"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/coin_jaune" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnVert"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="top|center"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/coin_vert" />

        <ImageButton
            android:id="@+id/btnRouge"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="top|center"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/coin_rouge" />
    </LinearLayout>

</LinearLayout>