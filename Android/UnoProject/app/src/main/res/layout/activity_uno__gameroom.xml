<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LLTout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/board_foncee"
    android:orientation="vertical"
    tools:context=".Activities.UNO_Gameroom">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight=".35"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            app:srcCompat="@drawable/back_uno_card" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:gravity="center"
            android:text="X"
            android:textColor="@color/colorAccent"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txtNbCarteAdversaire"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/colorAccent"
            android:textSize="50sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".05"
        android:background="@drawable/board_pale"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".30"
        android:background="@drawable/board"
        android:orientation="horizontal"
        android:padding="10dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="66dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="120dp"
            app:srcCompat="@drawable/uno_deck" />

        <ImageView
            android:id="@+id/imageCarteCentre"
            android:layout_width="66dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/back_uno_card" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".05"
        android:background="@drawable/board_pale"
        android:gravity="center"
        android:textColor="@color/colorAccent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".30">

        <LinearLayout
            android:id="@+id/LayoutMesCartes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:divider="@drawable/espacement"
            android:orientation="horizontal"
            android:paddingRight="25dp"
            android:showDividers="middle">

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>